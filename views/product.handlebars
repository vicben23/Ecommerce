<div class="div-img-telefono">
        <div class="miniatura-telefono" id="miniatura-telefono">
            {{#each product.pictures}}
                <div class="miniatura" onclick = "zoomMiniatura('{{this.url}}')"><img src="{{this.url}}"  height="70px"></div>
            {{/each}}
        </div>
        <div class="home-img-telefono" id="home-img-telefono"><img src="{{product.pictures.0.url}}" id="imagen" class="home-img" height="450px"></div> 
</div>
  

<div class="div-caract-product">
    <div class="caract-product1">
        <h2>{{product.title}}</h2>
    </div>
    <div class="caract-product2">
        <h1>$ {{product.price}}</h1>
    </div>    
    <button class="carrito-home" onclick="cart('{{product.id}}')">Agregar al carrito</button>
</div>
